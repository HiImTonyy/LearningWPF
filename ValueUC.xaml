<UserControl x:Class="LearningWPF.ValueUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Width="60" Click="Plus_Button_Click">+10</Button>
            <Button Width="60" Height="75" Click="Minus_Button_Click">-10</Button>
        </StackPanel>
        <Border Width="120" BorderBrush="Black" HorizontalAlignment="Left" BorderThickness="1"></Border>
        <TextBox
            Name="mainTextBox"
            TextChanged="mainTextBox_TextChanged"
            Width="120"
            Height="35"
            FontSize="28"
            Text="0"
            HorizontalAlignment="Left">
            
        </TextBox>
    </StackPanel>
</UserControl>
