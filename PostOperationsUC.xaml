<UserControl x:Class="LearningWPF.PostOperationsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningWPF"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Name="Heart"
                   Margin="8"
                   Source="/Icons/emptyheart.png"
                   Stretch="Uniform"
                   MouseDown="Heart_MouseDown"></Image>
            <Image Name="Comment"
                   Margin="8"
                   Source="/Icons/comment.png"
                   Stretch="Uniform"/>
            <Image Name="Send"
                   Margin="8"
                   Source="/Icons/send.png"
                   Stretch="Uniform"/>
        </StackPanel>
        <Image Name="Bookmark"
               HorizontalAlignment="Right"
               Margin="8"
               Source="/Icons/bookmark.png"
               Stretch="Uniform"/>
    </Grid>
</UserControl>
