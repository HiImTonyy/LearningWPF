<Window x:Class="LearningWPF.Button22_Linq"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="LINQ" Height="675" Width="1120"
        ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Button FontSize="20" Click="Even_Click" Margin="5,0,10,0" Name="Even">Show Even Numbers</Button>
            <Button FontSize="20" Click="Odd_Click" Margin="5,0,10,0" Name="Odd">Show Odd Numbers</Button>
            <Button FontSize="20" Click="RemoveFilter_Click" Margin="5,0,0,0" Name="RemoveFilter">Remove Filter</Button>
        </StackPanel>
        <TextBlock 
            x:Name="mainTextBlock"
            FontSize="40" 
            HorizontalAlignment="Center" 
            Margin="0,50,0,0">
        </TextBlock>
    </StackPanel>
</Window>
