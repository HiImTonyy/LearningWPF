<Window x:Class="LearningWPF.Button12_MenuControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Button12_MenuControl" Height="620" Width="1180"
        ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem 
                Header="File">
                <MenuItem Header="New">
                    <MenuItem Header="Project"></MenuItem>
                    <MenuItem Header="Repo"></MenuItem>
                </MenuItem>
                <MenuItem Click="MenuItem_Click" Header="Open">
                    <MenuItem Header="Project"></MenuItem>
                    <MenuItem Header="Repo"></MenuItem>
                </MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
