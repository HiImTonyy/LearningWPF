<Window x:Class="LearningWPF.Button14_OpenFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Button14_OpenFile" Height="675" Width="1180"
        ResizeMode="NoResize">
    <Grid>
        <Button 
            Name="openFile"
            HorizontalAlignment="Left"
            Content="Open .txt file"
            Margin="20,0,0,260"
            FontSize="20"
            FontWeight="Bold"
            Click="openFile_Click"
            Height="30">
        </Button>
        <Button 
            x:Name="saveFile"
            HorizontalAlignment="Left"
            Content="Save .txt file"
            Margin="180,0,0,260"
            FontSize="20"
            FontWeight="Bold"
            Click="saveFile_Click"
            Height="30"/>
        <TextBox
            Name="mainTextBox"
            VerticalAlignment="Center"
            Margin="10,70,10,0"
            Height="300"
            FontSize="16"
            VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>
