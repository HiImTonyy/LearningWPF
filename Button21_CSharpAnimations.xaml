<Window x:Class="LearningWPF.Button21_CSharpAnimations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CSharpAnimations" Height="675" Width="1120"
        ResizeMode="NoResize">
    <Grid Loaded="StackPanel_Loaded" MouseEnter="StackPanel_MouseEnter" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label
            x:Name="mainLabel"
            Content="Hover over me!"
            FontSize="33"
            FontWeight="DemiBold"
            BorderThickness="0"
            BorderBrush="Black">
        </Label>
        <Canvas>
            <Button
            x:Name="mainButton"
            Click="Button_Click"
            Content="Click me!!!"
            FontSize="33"
            FontWeight="Light"
            Margin="45,380,0,0">
            </Button>
            <Button
            x:Name="secondButton"
            Click="secondButton_Click"
            Content="Me too!!"
            FontSize="33"
            FontWeight="ExtraLight"
            Margin="1,380,0,0">
            </Button>
        </Canvas>
    </Grid>
</Window>
