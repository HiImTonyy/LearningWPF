<Window x:Class="LearningWPF.Button8_Grid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Button8_Grid" Height="620" Width="1180"
        ResizeMode="NoResize">
    <Grid ShowGridLines="False" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="620"/>
            <RowDefinition Height="620"/>
        </Grid.RowDefinitions>
        <Border
            Background="Silver">
        </Border>
        <Border Grid.Column="1"
            Background="Gray">
        </Border>
        <Border Grid.Column="1" Grid.Row="0"
            Background="LightGray"
            Height="30"
            VerticalAlignment="Top">
        </Border>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Column="2">WOW!</TextBlock>
    </Grid>
</Window>
