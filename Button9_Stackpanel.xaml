<Window x:Class="LearningWPF.Button9_Stackpanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="720" Width="420"
        ResizeMode="NoResize">
    <StackPanel Height="720" Width="420">
        <Button>Button 1</Button>
        <Button>Button 2</Button>
        <Button>Button 3</Button>
        <Button>Button 4</Button>
        <Button>Button 5</Button>
        <StackPanel Height="153.2" Orientation="Horizontal">
            <Button Width="210">Button 1</Button>
            <Button Width="210">Button 2</Button>
        </StackPanel>
        <StackPanel Height="151.2" Orientation="Horizontal">
            <Button Width="210">Button 3</Button>
            <Button Width="210">Button 4</Button>
        </StackPanel>
        <WrapPanel HorizontalAlignment="Center">
            <Button FontSize="20">Button A</Button>
            <Button FontSize="20">Button B</Button>
            <Button FontSize="20">Button C</Button>
            <Button FontSize="20">Button D</Button>
        </WrapPanel>
    </StackPanel>
</Window>
